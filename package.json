{
  "name": "@materialr/ripple",
  "version": "0.0.0-development",
  "description": "Material ripple foundation implementation for React",
  "main": "lib/index.js",
  "scripts": {
    "build:production": "babel src --out-dir lib --ignore **/*.test.js,**/*.test.jsx",
    "coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "eslint --ext .js .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "npm run lint && npm run test:scripts",
    "test:scripts": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/materialr/ripple.git"
  },
  "keywords": [
    "React",
    "Material",
    "Ripple",
    "Foundation"
  ],
  "author": "Hendrik Volschenk <righteous.trespasser@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/materialr/ripple/issues"
  },
  "homepage": "https://github.com/materialr/ripple#readme",
  "dependencies": {
    "@material/button": ">=0.23.0",
    "@materialr/ripple": "^0.0.0",
    "classnames": ">=2.2.5",
    "prop-types": ">=15.6.0",
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": ">=16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": ">=6.0.2",
    "eslint-plugin-react": ">=7.4.0",
    "jest": "^21.2.1",
    "semantic-release": "^8.2.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ]
  }
